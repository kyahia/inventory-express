extends layout
block content
   h1= title
   form(method='POST')
      .form-group
         label(for='name') Name
         input#name.form-control(name='name' required value=(category === undefined ? '' : category.name))
      .form-group
         label(for='description') Description
         textarea#description.form-control(name='description' required)= (category === undefined ? '' : category.description)
      div
         label Enter Admin password
         input#admin-password.mx-3(name='admin-password' type='password' required class= correctPass ? "" : "is-invalid")
         button.btn.btn-primary(type='submit') Submit
   
   if errors
      hr
      ul
         for error in errors
            li= error.msg